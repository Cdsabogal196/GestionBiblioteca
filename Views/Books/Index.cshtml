@model IEnumerable<GestionDeBiblioteca.Models.DTO.BookDTO>

@{
    ViewBag.Title = "Catalogo de Libros";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">Catalogos de libros</h2>
        @Html.ActionLink("Añade un nuevo libro", "Create", null, new { @class = "btn btn-primary" })
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover table-striped">
                    <thead class="table-light">
                        <tr>
                            <th scope="col">
                                Nombre de autor
                            </th>
                            <th scope="col">
                                Título
                            </th>
                            <th scope="col" class="text-center">
                                Año
                            </th>
                            <th scope="col">
                                Género
                            </th>
                            <th scope="col" class="text-center">
                                Número de páginas
                            </th>
                            <th scope="col" class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.AuthorName)
                                </td>
                                <td>
                                    <strong>@Html.DisplayFor(modelItem => item.Title)</strong>
                                </td>
                                <td class="text-center">
                                    @Html.DisplayFor(modelItem => item.Year)
                                </td>
                                <td>
                                    <span class="badge bg-secondary">@Html.DisplayFor(modelItem => item.Genre)</span>
                                </td>
                                <td class="text-center">
                                    @Html.DisplayFor(modelItem => item.NumPage)
                                </td>
                                <td class="text-end">
                                    <div class="btn-group" role="group">
                                        @Html.ActionLink("Editar", "Edit", new { id = item.BookId }, new { @class = "btn btn-sm btn-outline-primary" })
                                        @Html.ActionLink("Detalles", "Details", new { id = item.BookId }, new { @class = "btn btn-sm btn-outline-info" })
                                        @Html.ActionLink("Eliminar", "Delete", new { id = item.BookId }, new { @class = "btn btn-sm btn-outline-danger" })
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<style>
    .table-hover tbody tr:hover {
        background-color: rgba(0, 123, 255, 0.05);
    }

    .badge {
        font-size: 0.9em;
        padding: 0.35em 0.65em;
    }

    .btn-group .btn {
        margin-right: 0.25rem;
    }

        .btn-group .btn:last-child {
            margin-right: 0;
        }
</style>