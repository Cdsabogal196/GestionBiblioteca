@model IEnumerable<GestionDeBiblioteca.Models.DTO.AuthorDTO>

@{
    ViewBag.Title = "Índice de Autores";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">Índice de Autores</h2>
        @Html.ActionLink("Añadir Nuevo Autor", "Create", null, new { @class = "btn btn-primary" })
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover table-striped">
                    <thead class="table-light">
                        <tr>
                            <th scope="col">
                                Nombre
                            </th>
                            <th scope="col">
                                Fecha de Nacimiento
                            </th>
                            <th scope="col">
                                Ciudad
                            </th>
                            <th scope="col">
                                Correo Electrónico
                            </th>
                            <th scope="col" class="text-end">
                                Acciones
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DateBirth)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.City)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Email)
                                </td>
                                <td class="text-end">
                                    <div class="btn-group" role="group">
                                        @Html.ActionLink("Editar", "Edit", new { id = item.AuthorId }, new { @class = "btn btn-sm btn-outline-primary" })
                                        @Html.ActionLink("Detalles", "Details", new { id = item.AuthorId }, new { @class = "btn btn-sm btn-outline-info" })
                                        @Html.ActionLink("Eliminar", "Delete", new { id = item.AuthorId }, new { @class = "btn btn-sm btn-outline-danger" })
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<style>
    .table-hover tbody tr:hover {
        background-color: rgba(0, 123, 255, 0.05);
    }

    .btn-group .btn {
        margin-right: 0.25rem;
    }

        .btn-group .btn:last-child {
            margin-right: 0;
        }
</style>
